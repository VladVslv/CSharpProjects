<Window x:Class="DrawingFractals.CantorSetSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawingFractals"
        mc:Ignorable="d"
        Title="Параметры множества Кантора" Height="120" Width="420" MinHeight="120" MinWidth="420">
    <Grid>
        <TextBlock x:Name="DistanceTextBox" HorizontalAlignment="Left" Margin="10,10,0,0" Text="Расстояние между отрезками (в пикселях): 10" TextWrapping="Wrap" VerticalAlignment="Top" Width="291"/>
        <Slider x:Name="DistanceSlider" Margin="10,31,10,0" VerticalAlignment="Top" Minimum="10" Maximum="30" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="DistanceSliderVAlueChanged"/>
        <Button Content="Отменить изменения" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.047,-2.475" Click="CancelButtonClick"/>
        <Button Content="Применить изменения" HorizontalAlignment="Right" Margin="0,54,10,0" VerticalAlignment="Top" Click="OkButtonClick"/>

    </Grid>
</Window>
